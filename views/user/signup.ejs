<% layout("layout/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
  <div class="col-lg-6 col-md-8 col-sm-12 offset-lg-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>

        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />

        <div class="valid-feedback"> Looks good</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>

        <input
          type="email"
          name="email"
          id="username"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3 password-box">
        <label for="password" class="form-label">Password</label>

        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <i class="fa-regular fa-eye-slash" id="togglePassword"></i>
      </div>

      <button class="btn btn-success btn-signup">SignUp</button>
    </form>
  </div>
</div>
