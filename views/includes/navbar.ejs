<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: white;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }
  .navbar-collapse {
    z-index: 1000; /* Adjust as needed */
  }

  .navbar-toggler {
    border: none;
    outline: none;
  }

  .navbar-toggler:focus,
  .navbar-toggler:active {
    border: none;
    outline: none;
    box-shadow: none; /* To remove any default box shadow */
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <!--border-botom class is used to show bootom border line and sticky top is used to fix the navbar at the top-->
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-solid fa-compass"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <i class="fa-solid fa-bars" id="toggleNavbar"></i>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form
          class="d-flex needs-validation"
          role="search"
          action="/search"
          method="get"
          novalidate
        >
          <input
            class="form-control me-2 search-input"
            type="search"
            placeholder="Search destination"
            name="q"
            required
          />
          <div class="invalid-feedback">Enter Location First!</div>

          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <!--ms-auto is used to shift this nav items to right-->
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) { %>
        <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>
        <!--check this currUser in app.js -->
        <% if(currUser) { %>
        <a class="nav-link" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const icon = document.querySelector("#toggleNavbar");
    const navbarCollapse = document.querySelector("#navbarNavAltMarkup");

    navbarCollapse.addEventListener("shown.bs.collapse", function () {
      icon.classList.remove("fa-bars");
      icon.classList.add("fa-xmark");
    });

    navbarCollapse.addEventListener("hidden.bs.collapse", function () {
      icon.classList.remove("fa-xmark");
      icon.classList.add("fa-bars");
    });
  });
</script>
